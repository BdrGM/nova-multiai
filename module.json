{
  "id": "nova-multiai",
  "title": "NOVA Multi-AI (Chat + TTS)",
  "version": "0.2.0",
  "compatibility": { "minimum": "13", "verified": "13" },
  "authors": [{ "name": "BdGM" }],
  "license": "MIT",

  "esmodules": ["main.js"],

  "socket": true,

  "url": "https://github.com/BdrGM/nova-multiai",
  "manifest": "https://raw.githubusercontent.com/BdrGM/nova-multiai/main/module.json",
  "download": "https://github.com/BdrGM/nova-multiai/archive/refs/heads/main.zip",

  "relationships": {
    "requires": [
      {
        "id": "socketlib",
        "type": "module",
        "manifest": "https://raw.githubusercontent.com/manuelVo/foundryvtt-socketlib/master/module.json",
        "compatibility": { "verified": "13" },
        "reason": "Used to broadcast TTS/audio to selected users (not just the initiator)."
      }
    ],
    "recommends": [
      {
        "id": "chat-portrait",
        "type": "module",
        "manifest": "https://raw.githubusercontent.com/ShoyuVanilla/FoundryVTT-Chat-Portrait/master/module.json",
        "reason": "Shows AI portrait/name in chat bubbles."
      }
    ]
  }
}
